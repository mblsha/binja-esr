{
	"name": "web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"wasm:build": "cd emulator-wasm && wasm-pack build --target web --out-dir ../src/lib/wasm/pce500_wasm",
		"wasm:test": "cd emulator-wasm && wasm-pack test --node",
		"pretest": "npm run wasm:build",
		"test": "vitest run",
		"test:watch": "vitest",
		"predev": "npm run wasm:build",
		"prebuild": "npm run wasm:build",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^22.15.3",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"jsdom": "^27.0.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^3.2.4"
	}
}
